{
  "manifest_version": 2,
  "name": "Better Canvas",
  "version": "3.0",

  "icons": {
    "16": "dist/img/icon16.png",
    "32": "dist/img/icon32.png",
    "48": "dist/img/icon48.png",
    "128": "dist/img/icon128.png"
  },

  "permissions": [
    "https://ecpi.instructure.com/api/v1/*",
    "storage",
    "activeTab",
    "declarativeContent"
  ],

  "options_ui": {
    "page": "dist/options.html",
    "chrome_style": true
  },

  "page_action": {
    "default_title": "Better Canvas",
    "default_popup": "dist/popup.html"
  },

  "background": {
    "scripts": ["dist/js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://ecpi.instructure.com/*"],
      "css": ["dist/css/content_script.min.css"],
      "js": [
        "dist/lib/jquery.min.js",
        "dist/js/content_script.js"
      ]
    }
  ]
}
