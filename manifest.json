{
  "manifest_version": 2,
  "name": "Better Canvas",
  "version": "3.0",

  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "permissions": [
    "https://ecpi.instructure.com/api/v1/*",
    "storage",
    "activeTab",
    "declarativeContent"
  ],

  "options_ui": {
    "page": "src/html/options.html",
    "chrome_style": true
  },

  "page_action": {
    "default_title": "Better Canvas",
    "default_popup": "src/html/popup.html"
  },

  "background": {
    "scripts": ["src/js/dist/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://ecpi.instructure.com/*"],
      "css": ["src/css/style.min.css"],
      "js": [
        "lib/jquery.min.js",
        "src/js/canvas_api.js",
        "src/js/vars.js",
        "src/js/objects.js",
        "src/js/main.js"
       // "src/js/dist/content_script.js"
      ]
    }
  ]
}
